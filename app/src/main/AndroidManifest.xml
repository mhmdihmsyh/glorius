<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.gloryrescuepetapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RescuePet"
        tools:targetApi="31">

        <!-- Launcher Activity -->
        <activity
            android:name="LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Activity lainnya -->
        <activity
            android:name="com.example.gloryrescuepetapp.Register"
            android:exported="true" />

        <activity
            android:name="com.example.gloryrescuepetapp.MainActivity"
            android:exported="true" />

        <activity
            android:name="com.example.gloryrescuepetapp.BerandaActivity"
            android:exported="true" /> <!-- âœ… Perbaikan: exported=true -->

        <activity
            android:name="com.example.gloryrescuepetapp.PostingHewanActivity"
            android:exported="true" />

        <activity
            android:name="com.example.gloryrescuepetapp.AdopsiHewanActivity"
            android:exported="true" />

        <activity android:name="com.example.gloryrescuepetapp.TipsActivity"
            android:exported="true" />

    </application>

</manifest>
